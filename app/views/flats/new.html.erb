<div class="container">
  <h1>Add a new flat</h1>
  <%= form_for(@flat) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <%= f.label :number_of_guests %>
    <%= f.text_field :number_of_guests %>
    <%= f.label :price_per_night %>
    <%= f.text_field :price_per_night %>
    <%= f.submit class: "btn btn-success" %>
  <% end %>
</div>
